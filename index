    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // --- Funnel Data ---
            const funnelData = [
                { id: '01', title: 'Pré-Qualificado', responsible: 'Automação (Bot)', desc: 'Lead com score ≥ 5.000 e dados mínimos preenchidos via Typeform e bot. Automação para tag "Pré-Qualificado" e criação no Kommo.' },
                { id: '02', title: 'Em Análise de Crédito', responsible: 'SDR', desc: 'SDR verifica aprovações em bancos prioritários. O SLA ideal para esta etapa é de no máximo 1 hora para garantir agilidade.' },
                { id: '03', title: 'Aguardando Retorno', responsible: 'SDR', desc: 'SDR aguarda respostas dos bancos. Alertas automáticos são disparados se o lead ficar parado por mais de 24 horas.' },
                { id: '04', title: 'Aprovado p/ Comercial', responsible: 'SDR', desc: 'SDR libera leads com pré-aprovação para o time comercial. A transição deve ser imediata.' },
                { id: '05', title: 'Contato Comercial', responsible: 'Comercial', desc: 'Time comercial inicia a negociação, apresenta a proposta de valor e registra todas as objeções do cliente no CRM.' },
                { id: '06', title: 'Documentação', responsible: 'Comercial', desc: 'Comercial solicita, orienta e gerencia a coleta da documentação necessária para a formalização do contrato.' },
                { id: '07', title: 'Contrato / Vistoria', responsible: 'Comercial / Banco', desc: 'Cliente e banco realizam a vistoria do veículo e finalizam a assinatura do contrato.' },
                { id: '08', title: 'Desembolso', responsible: 'Comercial', desc: 'Confirmação da liberação do valor na conta do cliente. O lead é então encaminhado para o fluxo de pós-venda.' },
                { id: '09', title: 'Pós-venda', responsible: 'Sucesso do Cliente', desc: 'Envio de pesquisa de satisfação, ativação do programa de indicação e oferta de suporte contínuo.' },
                { id: '10', title: 'Perda', responsible: 'Todos', desc: 'Categorização detalhada do motivo de perda para análise estratégica (Ex: Reprovado, Cliente desistiu, Sumiu, Concorrência).' }
            ];

            const funnelContainer = document.getElementById('funnel-container');
            const funnelDetails = document.getElementById('funnel-details');

            // --- Render Funnel Steps ---
            let funnelHTML = '';
            funnelData.forEach((step, index) => {
                const isLast = index === funnelData.length - 1;
                const textColor = isLast ? 'accent-color' : 'text-white';
                funnelHTML += `
                    <div class="flex-shrink-0 w-32 md:w-auto md:col-span-1 flex flex-col items-center relative">
                        <div data-id="${step.id}" class="funnel-step cursor-pointer bg-gray-900 border-2 border-gray-700 rounded-lg w-full h-24 flex flex-col justify-center items-center text-center p-2 hover:border-red-500">
                            <span class="font-bold text-sm ${textColor}">${step.id}</span>
                            <span class="text-xs font-semibold text-gray-300">${step.title}</span>
                        </div>
                        ${!isLast ? '<div class="hidden md:block absolute top-1/2 -right-4 transform -translate-y-1/2 text-gray-600 font-thin text-2xl">&rarr;</div>' : ''}
                    </div>
                `;
            });
            funnelContainer.innerHTML = funnelHTML;

            // --- Funnel Interaction Logic ---
            function updateDetails(id) {
                const step = funnelData.find(s => s.id === id);
                if (step) {
                    funnelDetails.innerHTML = `
                        <h4 class="text-2xl font-bold section-title mb-2">${step.id}. ${step.title}</h4>
                        <p class="text-sm text-gray-400 mb-4"><strong>Responsável:</strong> ${step.responsible}</p>
                        <p class="text-gray-300">${step.desc}</p>
                    `;
                }
            }

            funnelContainer.addEventListener('click', function(e) {
                const stepElement = e.target.closest('.funnel-step');
                if (stepElement) {
                    const id = stepElement.dataset.id;
                    
                    document.querySelectorAll('.funnel-step').forEach(el => el.classList.remove('active'));
                    stepElement.classList.add('active');

                    updateDetails(id);
                }
            });

            document.querySelector('.funnel-step').click();

            // --- Tab Interaction Logic ---
            const tabButtons = document.querySelectorAll('.tab-button');
            const tabContents = document.querySelectorAll('.tab-content');

            tabButtons.forEach(button => {
                button.addEventListener('click', () => {
                    tabButtons.forEach(btn => btn.classList.remove('active'));
                    tabContents.forEach(content => content.classList.add('hidden'));

                    button.classList.add('active');
                    document.getElementById(button.dataset.tab).classList.remove('hidden');
                });
            });

            // --- Chart.js Logic ---
            const ctx = document.getElementById('agingChart').getContext('2d');
            const chartTextColor = '#e5e7eb';
            const chartGridColor = 'rgba(229, 231, 235, 0.2)';

            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Contato Comercial', 'Documentação', 'Aguardando Retorno', 'Análise Crédito'],
                    datasets: [{
                        label: 'Nº de Leads Parados (>3 dias)',
                        data: [22, 14, 9, 5],
                        backgroundColor: 'rgba(239, 68, 68, 0.6)', // red-500 with alpha
                        borderColor: 'rgb(239, 68, 68)', // red-500
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: { color: chartTextColor },
                            grid: { color: chartGridColor }
                        },
                        x: {
                           ticks: { color: chartTextColor },
                           grid: { display: false }
                        }
                    },
                    plugins: {
                        legend: {
                           display: false
                        },
                        tooltip: {
                            backgroundColor: '#1f2937',
                            titleColor: '#ffffff',
                            bodyColor: '#e5e7eb'
                        },
                        title: {
                            display: false
                        }
                    }
                }
            });

        });
    </script>
</body>
</html>
